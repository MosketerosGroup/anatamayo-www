---
import Button from "@components/widgets/Button.astro";

import { Image } from "astro:assets";

import imgExhibition01 from "@assets/exhibition-01.png";
import imgExhibition02 from "@assets/exhibition-02.png";
import imgExhibition03 from "@assets/exhibition-03.png";
---

<section id="exhibitions" class="pt-12 pb-24 bg-base-200 lg:pt-16">
