---
import '@/styles/global.css';

import MetaPixelHead from "@/components/base/MetaPixelHead.astro";
import MetaPixelBody from "@/components/base/MetaPixelBody.astro";
import GoogleTagManagerHead from "@/components/base/GoogleTagManagerHead.astro";
import GoogleTagManagerBody from "@/components/base/GoogleTagManagerBody.astro";
import OpenGraph from "@/components/base/OpenGraph.astro";
import Header from "@/components/sections/Header";
import Footer from "@/components/sections/Footer.astro";

import LogoFallback from "@/assets/LogoFallback";

import constantsFile from '@/data/constants.json';

const currentLocale : ('es'|'en') = (Astro.currentLocale === 'es') ? Astro.currentLocale : 'en';
const constants = constantsFile[currentLocale];
---

<!DOCTYPE html>
<html lang={currentLocale} class="scroll-smooth h-full" dir="ltr">
	<head>
		<meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/jpg" href="favicon.jpg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="sitemap" href="/sitemap-index.xml" />

		<title>{constants.title}</title>

		<GoogleTagManagerHead />
		<MetaPixelHead />
		<OpenGraph />

	</head>
	<body class="bg-base-100 h-full font-regular text-base text-justify text-primary">

		<GoogleTagManagerBody />
		<MetaPixelBody />

		<Header client:only="react">
			<div slot="fallback">
				<div class="h-[425px] flex justify-center items-center md:hidden">
					<LogoFallback className="w-36" />
				</div>
				<div class="hidden h-screen md:flex justify-center items-center">
					<LogoFallback className="w-48" />
				</div>
			</div>
		</Header>

		<main>
    	<slot />
		</main>

		<Footer />
	</body>

	<script src="../scripts/scripts.ts"></script>
</html>
